{
  "name": "thinmcp",
  "version": "1.0.0",
  "description": "A thin MCP gateway that compresses many upstream MCP servers into search() + execute().",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "dev:http": "tsx src/index.ts --transport http --port 8787",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "node --test --import tsx test/**/*.test.ts",
    "start": "node dist/index.js",
    "sync": "tsx src/index.ts --sync-only",
    "doctor": "tsx src/doctor.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VenkatGGG/ThinMCP.git"
  },
  "keywords": [],
  "author": "Sri G",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/VenkatGGG/ThinMCP/issues"
  },
  "homepage": "https://github.com/VenkatGGG/ThinMCP#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "ajv": "^8.18.0",
    "better-sqlite3": "^12.6.2",
    "js-yaml": "^4.1.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
